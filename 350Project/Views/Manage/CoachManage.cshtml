@model IEnumerable<_350Project.Models.CoachModel>

@using _350Project.Models

@{
    ViewBag.Title = "CoachManage";
}


<h2>CoachManage</h2>

<div class="row mt-5 justify-content-between">

    <button onclick="location.href='/Manage/AddCoach'" type="button" class="btn btn-primary">
        + Create a coach
    </button>
</div>


<table class="table mt-5">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Coach_ID</th>
            <th scope="col">First_Name</th>
            <th scope="col">Last_Name</th>
            <th scope="col">Coach_Email</th>
            <th scope="col">Coach_Gender</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @if (@Model.Count() > 0)
        {
            foreach (CoachModel record in @Model)
            {
                <tr>
                    <th scope="row">
                        @record.Coach_ID
                    </th>
                    <td>
                        @record.First_Name
                    </td>
                    <td>
                        @record.Last_Name
                    </td>
                    <td>
                        @record.Coach_Email
                    </td>
                    <td>
                        @record.Coach_Gender
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditCoach", new { id = @record.Coach_ID })
                        <p>  |  </p>
                        @Html.ActionLink("EditArea", "EditCoachArea", new { id = @record.Coach_ID })
                    </td>
                </tr>
            }
        }
        @if (@Model.Count() == 0)
        {
            <tr>
                <td colspan="6" align="center">No record found</td>
            </tr>

        }
    </tbody>
</table>
