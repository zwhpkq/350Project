@model _350Project.Models.RecordCreateModel

@{
    ViewBag.Title = "CreateRecord";
}

@section Scripts {
    <script>
        function nwhchange() {
            var val = parseInt(100);
            if (document.getElementById('defaultcheckbox').checked) {
                document.getElementById('nwh-n').value = val;
                document.getElementById('nwh-n').readOnly = true;

                document.getElementById('nwh-w').value = val;
                document.getElementById('nwh-w').readOnly = true;


                document.getElementById('nwh-h').value = val;
                document.getElementById('nwh-h').readOnly = true;


            }
            else {
                document.getElementById('nwh-n').value = 0;
                document.getElementById('nwh-w').value = 0;
                document.getElementById('nwh-h').value = 0;


                document.getElementById('nwh-n').readOnly = false;

                document.getElementById('nwh-w').readOnly = false;

                document.getElementById('nwh-h').readOnly = false;

            }
        }
    </script>
}

<h2 class="mt-5">CreateRecord</h2>

