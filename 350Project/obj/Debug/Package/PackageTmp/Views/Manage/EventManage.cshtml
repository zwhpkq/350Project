@model IEnumerable<_350Project.Models.EventModel>

@using _350Project.Models

@{
    ViewBag.Title = "EventManage";
}

<h2>EventManage</h2>

<div class="row mt-5 justify-content-between">

    <button onclick="location.href='/Manage/AddEvent'" type="button" class="btn btn-primary">
        + Add a event
    </button>
</div>


<table class="table mt-5">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Class_ID</th>
            <th scope="col">Class_Name</th>
            <th scope="col">Class_Start</th>
            <th scope="col">Class_End</th>
            <th scope="col">Coach_ID</th>
            <th scope="col">Events_type</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @if (@Model.Count() > 0)
        {
            foreach (EventModel record in @Model)
            {
                <tr>
                    <th scope="row">
                        @record.Class_ID
                    </th>
                    <td>
                        @record.Class_Name
                    </td>
                    <td>
                        @record.Class_Start
                    </td>
                    <td>
                        @record.Class_End
                    </td>
                    <td>
                        @record.Coach_ID
                    </td>
                    <td>
                        @record.Events_type
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditEvent", new { id = @record.Class_ID })

                    </td>
                </tr>
            }
        }
        @if (@Model.Count() == 0)
        {
            <tr>
                <td colspan="6" align="center">No record found</td>
            </tr>

        }
    </tbody>
</table>