@model IEnumerable<_350Project.Models.CoachToTypeModel>

@using _350Project.Models

@{
    ViewBag.Title = "EditCoachArea";
}

<h2>EventManage</h2>

<div class="row mt-5 justify-content-between">

    <button onclick="location.href='/Manage/AddCTT'" type="button" class="btn btn-primary">
        + Add a coach fitnesstype relation
    </button>
</div>

<table class="table mt-5">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">CoachId</th>
            <th scope="col">TypeID</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Count() > 0)
        {
            foreach (CoachToTypeModel record in @Model)
            {
                <tr>
                    <th scope="row">
                        @record.Id
                    </th>
                    <td>
                        @record.CoachId
                    </td>
                    <td>
                        @record.TypeID
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditCArea", new { id = @record.Id })
                        @Html.ActionLink("Delete", "DelectCArea", new { id = @record.Id })
                    </td>
                </tr>
            }
        }
        @if (@Model.Count() == 0)
        {
            <tr>
                <td colspan="6" align="center">No record found</td>
            </tr>

        }
    </tbody>
</table>
