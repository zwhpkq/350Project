<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LightWeight Workout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
            </button>
            <a class="navbar-brand" href="/">LightWeightWorkout</a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">

                    <!-- !!!!!!To do, redirect this home controllor -->

                    <li class="nav-item"><a href="/Home/About" class="nav-link">About Us</a></li>
                    <li class="nav-item"><a href="/Home/About" class="nav-link">Coaches</a></li>
                    <li class="nav-item"><a href="/Home/Contact" class="nav-link">Activities</a></li>
                    <li class="nav-item"><a href="/Home/Contact" class="nav-link">Reviews</a></li>
                    <li class="nav-item"><a href="/Home/Contact" class="nav-link">Gallery</a></li>
                    <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contect Us</a></li>
                </ul>

                @if ((string)Session["Email"] == "admin@admin")
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item"><a href="/Manage/Index" class="nav-link">Management</a></li>
                    </ul>

                }

                @if (Session["Username"] != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item"><a href="/Dashboard/Index" class="nav-link">Hello @Session["Username"]</a></li>
                        <li class="nav-item"><a href="/Account/Logout" class="nav-link">Log out</a></li>
                    </ul>

                }
                @if (Session["Username"] == null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item"><a href="/Home/SignUp" id="loginLink" class="nav-link">Register</a></li>
                        <li class="nav-item"><a href="/Account/Login" id="loginLink" class="nav-link">Log in</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LightWeight Workout</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("Styles", required: false)


</body>
</html>
